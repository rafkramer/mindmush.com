---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="MINDMUSH - Swiss venture studio building, scaling, and acquiring mobile apps with 10M+ downloads" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-[#0a0a0a] text-white min-h-screen">
    <!-- Film grain overlay -->
    <div class="grain" aria-hidden="true"></div>

    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  /* Default selection - purple */
  ::selection {
    background-color: #9333ea !important;
    color: #ffffff !important;
  }
  ::-moz-selection {
    background-color: #9333ea !important;
    color: #ffffff !important;
  }

  /* Stats section - indigo */
  #numbers ::selection {
    background-color: #4f46e5 !important;
  }
  #numbers ::-moz-selection {
    background-color: #4f46e5 !important;
  }

  /* Portfolio section - cyan */
  #portfolio ::selection {
    background-color: #06b6d4 !important;
  }
  #portfolio ::-moz-selection {
    background-color: #06b6d4 !important;
  }

  /* Philosophy/Partners section - emerald */
  #philosophy ::selection {
    background-color: #10b981 !important;
  }
  #philosophy ::-moz-selection {
    background-color: #10b981 !important;
  }

  /* Contact section - pink */
  #contact ::selection {
    background-color: #ec4899 !important;
  }
  #contact ::-moz-selection {
    background-color: #ec4899 !important;
  }
</style>
